{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "vite-plugin-vue-layouts/client", "@types/jest"],
    "jsx": "preserve",
    "paths": {
      "~/*": ["src/*"],
      "public/*": ["public/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
